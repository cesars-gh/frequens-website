---
import { Icon } from 'astro-icon/components';
import type { HowItWorksSectionContent } from '../../types/landing';

type Props = {
	content: HowItWorksSectionContent;
};

const { content } = Astro.props;
---

<section class="py-20 bg-gray-50">
	<div class="container mx-auto px-4 max-w-7xl">
		<div class="max-w-6xl mx-auto">
			<div class="text-center mb-12">
				<h2 class="text-3xl lg:text-4xl font-bold text-secondary-800 mb-4">{content.title}</h2>
				<div class="text-main-500 text-2xl font-semibold mt-8">{content.statistic}</div>
			</div>

			<div class="grid md:grid-cols-2 gap-6">
				{
					content.cards.map((card) => (
						<div class="bg-white p-8 rounded-xl shadow-sm">
							<div class="flex items-start gap-4">
								<div class="w-12 h-12 bg-main-100 rounded-full flex items-center justify-center shrink-0">
									<Icon
										name={card.icon}
										class="w-6 h-6 text-main-600"
									/>
								</div>
								<div>
									<h3 class="text-xl font-semibold text-secondary-800 mb-2">{card.title}</h3>
									<p class="text-secondary-600">{card.description}</p>
								</div>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
