---
import { Icon } from 'astro-icon/components';
import type { WhoCanBenefitSectionContent } from '../../types/landing';

const { PUBLIC_WHATSAPP_LINK } = import.meta.env;

type Props = {
	content: WhoCanBenefitSectionContent;
};

const { content } = Astro.props;
---

<section class="py-20 bg-white">
	<div class="container mx-auto px-4">
		<div class="max-w-6xl mx-auto">
			<div class="text-center mb-12">
				<h2 class="text-3xl lg:text-4xl font-bold text-secondary-800 mb-4">{content.title}</h2>
				<p class="text-lg text-secondary-600 max-w-3xl mx-auto">{content.subtitle}</p>
			</div>

			<div class="grid md:grid-cols-2 gap-6">
				{
					content.beneficiaries.map((beneficiary) => (
						<div class="bg-gray-50 p-6 rounded-xl shadow-sm border-l-4 border-main-500">
							<div class="flex items-start gap-4">
								<div class="w-12 h-12 bg-main-100 rounded-full flex items-center justify-center shrink-0">
									<Icon
										name={beneficiary.icon}
										class="w-6 h-6 text-main-600"
									/>
								</div>
								<div>
									<h3 class="text-lg font-semibold text-secondary-800 mb-2">{beneficiary.title}</h3>
									<p class="text-secondary-600">{beneficiary.description}</p>
								</div>
							</div>
						</div>
					))
				}
			</div>
			<!-- CTA Button -->
			<div class="text-center">
				<a
					href={PUBLIC_WHATSAPP_LINK}
					target="_blank"
					rel="noopener noreferrer"
					class="mt-16 inline-flex btn-whatsapp items-center gap-2 text-lg">
					<Icon
						name="whatsapp"
						class="w-5 h-5" />
					{content.ctaText}
				</a>
			</div>
		</div>
	</div>
</section>
