---
import { Icon } from 'astro-icon/components';
import type { ProcessSectionContent } from '../../types/landing';

type Props = {
	content: ProcessSectionContent;
};

const { content } = Astro.props;
---

<section class="py-20 bg-gray-50">
	<div class="container mx-auto px-4 max-w-7xl">
		<div class="max-w-6xl mx-auto">
			<div class="text-center mb-12">
				<h2 class="text-3xl lg:text-4xl font-bold text-secondary-800 mb-4">{content.title}</h2>
				<p class="text-lg text-secondary-600 max-w-3xl mx-auto">{content.subtitle}</p>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6 mb-12">
				{
					content.steps.map((step) => (
						<div class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-main-500">
							<div class="text-3xl font-bold text-main-600 mb-3">{step.number}</div>
							<h3 class="text-xl font-semibold text-secondary-800 mb-3">{step.title}</h3>
							<p class="text-secondary-600 text-sm leading-relaxed">{step.description}</p>
						</div>
					))
				}
			</div>

			<div class="text-center">
				<a
					href="/agendar-cita/"
					class="btn-primary inline-flex items-center gap-2">
					<Icon
						name="calendar"
						class="w-5 h-5" />
					{content.ctaText}
				</a>
			</div>
		</div>
	</div>
</section>
