---
import { Icon } from 'astro-icon/components';
import type { TestimonialsSectionContent } from '../../types/landing';

type Props = {
	content: TestimonialsSectionContent;
};

const { content } = Astro.props;
---

<section class="py-20 bg-gray-50">
	<div class="container mx-auto px-4">
		<div class="max-w-6xl mx-auto">
			<div class="text-center mb-12">
				<h2 class="text-3xl lg:text-4xl font-bold text-secondary-800 mb-4">{content.title}</h2>
			</div>

			<div class="grid md:grid-cols-2 gap-8">
				{
					content.testimonials.map((testimonial) => (
						<div class="bg-white rounded-xl shadow-sm overflow-hidden">
							<div class="p-6">
								<div class="flex items-start gap-3">
									<Icon
										name="quote"
										class="w-8 h-8 text-main-400 shrink-0"
									/>
									<div>
										<p class="text-secondary-600 leading-relaxed mb-3">{testimonial.quote}</p>
										<p class="text-secondary-800 font-semibold text-sm">â€” {testimonial.author}</p>
									</div>
								</div>
							</div>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
