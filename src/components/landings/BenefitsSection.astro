---
import { Icon } from 'astro-icon/components';
import type { BenefitsSectionContent } from '../../types/landing';

type Props = {
	content: BenefitsSectionContent;
};

const { content } = Astro.props;
---

<section class="py-20 bg-gray-50">
	<div class="container mx-auto px-4 max-w-7xl">
		<div class="max-w-6xl mx-auto">
			<div class="text-center mb-12">
				<h2 class="text-3xl lg:text-4xl font-bold text-secondary-800 mb-4">{content.title}</h2>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				{
					content.benefits.map((benefit) => (
						<div class="bg-white p-6 rounded-xl shadow-sm">
							<div class="w-12 h-12 bg-main-100 rounded-full flex items-center justify-center mb-4">
								<Icon
									name={benefit.icon || 'check-circle'}
									class="w-6 h-6 text-main-600"
								/>
							</div>
							<h3 class="text-lg font-semibold text-secondary-800 mb-2">{benefit.title}</h3>
							<p class="text-secondary-600">{benefit.description}</p>
						</div>
					))
				}
			</div>
		</div>
	</div>
</section>
