---
import { Icon } from 'astro-icon/components';
import { TREATMENTS_LINKS } from '../../data/treatments';

const PUBLIC_WHATSAPP_LINK = import.meta.env.PUBLIC_WHATSAPP_LINK;
const emailAddress = 'frequensneuroclinic@gmail.com';

const INFO_LINKS = {
	howItWorks: '/#tratamiento',
	benefits: '/#resultados',
	team: '/#sobre-nosotros',
	faq: '/preguntas-frecuentes', // this one has a page
};
---

<footer class="bg-secondary-900 text-white py-12">
	<div class="container mx-auto px-4 max-w-7xl">
		<!-- Top Row -->
		<div class="grid md:grid-cols-4 gap-8 mb-8">
			<!-- Logo and Description -->
			<div class="md:col-span-1">
				<div class="flex items-center space-x-2 mb-4">
					<img
						src="/images/logo-horizontal.svg"
						width="250"
						alt="Frequens Neuro Clinic" >
				</div>
				<p class="text-sm text-secondary-400 mb-4">
					Clínica especializada en Estimulación Magnética Transcraneal (EMT) en Mérida, Yucatán.
				</p>
			</div>

			<!-- Treatments Links -->
			<div>
				<h4 class="font-semibold mb-4">Tratamientos</h4>
				<ul class="space-y-2 text-sm">
					{
						TREATMENTS_LINKS.map((item: { href: string; label: string }) => (
							<li>
								<a
								href={item.href}
								class="hover:text-main-400 transition-colors"
								>
									{item.label}
								</a>
							</li>
						))
					}
				</ul>
			</div>

			<!-- Information Links -->
			<div>
				<h4 class="font-semibold mb-4">Información</h4>
				<ul class="space-y-2 text-sm">
					<li>
						<a
							href={INFO_LINKS.howItWorks}
							class="hover:text-main-400 transition-colors"
							>Cómo Funciona</a
						>
					</li>
					<li>
						<a
							href={INFO_LINKS.benefits}
							class="hover:text-main-400 transition-colors"
							>Beneficios</a
						>
					</li>
					<li>
						<a
							href={INFO_LINKS.team}
							class="hover:text-main-400 transition-colors"
							>Nuestro Equipo</a
						>
					</li>
					<li>
						<a
							href={INFO_LINKS.faq}
							class="hover:text-main-400 transition-colors"
							>Preguntas Frecuentes</a
						>
					</li>
				</ul>
			</div>

			<!-- Contact Info -->
			<div>
				<h4 class="font-semibold mb-4">Contáctanos</h4>
				<ul class="space-y-2 text-sm">
					<li class="flex items-center gap-2">
						<Icon
							name="whatsapp"
							class="w-4 h-4" />
						<a
							href={PUBLIC_WHATSAPP_LINK}
							target="_blank"
							class="hover:text-main-400 transition-colors"
							>WhatsApp</a
						>
					</li>
					<li class="flex items-center gap-2">
						<Icon
							name="instagram"
							class="w-4 h-4" />
						<a
							href="https://www.instagram.com/frequens.neuroclinic/"
							target="_blank"
							class="hover:text-main-400 transition-colors"
							>Instagram</a
						>
					</li>
					<li class="flex items-center gap-2">
						<Icon
							name="email"
							class="w-4 h-4" />
						<a
							href={`mailto:${emailAddress}`}
							target="_blank"
							class="hover:text-main-400 transition-colors"
							>{emailAddress}</a
						>
					</li>
					<li class="flex items-start gap-2">
						<Icon
							name="map-pin"
							class="w-4 h-4 mt-0.5" />
						<a
							href="https://maps.app.goo.gl/nNEHp8UEDSMV3stL8"
							target="_blank"
							class="hover:text-main-400 transition-colors">
							Calle 50 171, Col. Francisco de Montejo <br >
							Mérida, Yucatán, 97203, México
						</a>
					</li>
				</ul>
			</div>
		</div>

		<!-- Bottom Row -->
		<div class="border-t border-secondary-700 pt-8 flex flex-col md:flex-row justify-between items-center">
			<p class="text-sm text-secondary-400 mb-4 md:mb-0">
				&copy; {new Date().getFullYear()}&nbsp;Frequens Neuro Clinic. Todos los Derechos Reservados
				<a
					href="/terms"
					class="text-sm text-secondary-400 ml-4 underline hover:text-main-400 transition-colors"
					>Términos de Uso</a
				>
			</p>
		</div>
	</div>
</footer>
