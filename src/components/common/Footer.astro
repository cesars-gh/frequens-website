---
import { Icon } from 'astro-icon/components';
const { PUBLIC_WHATSAPP_LINK } = import.meta.env;
---

<footer class="bg-secondary-900 text-white py-12">
	<div class="container mx-auto px-4">
		<!-- Top Row -->
		<div class="grid md:grid-cols-4 gap-8 mb-8">
			<!-- Logo and Description -->
			<div class="md:col-span-1">
				<div class="flex items-center space-x-2 mb-4">
					<img
						src="/images/logo-horizontal.svg"
						width="250"
						alt="Frequens Neuro Clinic" >
				</div>
				<p class="text-sm text-secondary-400 mb-4">
					Clínica especializada en Estimulación Magnética Transcraneal (EMT) en Mérida, Yucatán.
				</p>
			</div>

			<!-- Services Links -->
			<div>
				<h4 class="font-semibold mb-4">Servicios</h4>
				<ul class="space-y-2 text-sm">
					<li>
						<a
							href="/#tratamiento"
							class="hover:text-main-400 transition-colors"
							>Tratamiento con EMT</a
						>
					</li>
					<li>
						<a
							href="/#sobre-nosotros"
							class="hover:text-main-400 transition-colors"
							>Sobre Nosotros</a
						>
					</li>
					<li>
						<a
							href="/#resultados"
							class="hover:text-main-400 transition-colors"
							>Resultados</a
						>
					</li>
					<li>
						<a
							href="/#inicio"
							class="hover:text-main-400 transition-colors"
							>Inicio</a
						>
					</li>
				</ul>
			</div>

			<!-- Information Links -->
			<div>
				<h4 class="font-semibold mb-4">Información</h4>
				<ul class="space-y-2 text-sm">
					<li>
						<a
							href="#tratamiento"
							class="hover:text-main-400 transition-colors"
							>Cómo Funciona</a
						>
					</li>
					<li>
						<a
							href="#resultados"
							class="hover:text-main-400 transition-colors"
							>Beneficios</a
						>
					</li>
					<li>
						<a
							href="#sobre-nosotros"
							class="hover:text-main-400 transition-colors"
							>Nuestro Equipo</a
						>
					</li>
					<li>
						<a
							href="#"
							class="hover:text-main-400 transition-colors"
							>Preguntas Frecuentes</a
						>
					</li>
				</ul>
			</div>

			<!-- Contact Info -->
			<div>
				<h4 class="font-semibold mb-4">Contáctanos</h4>
				<ul class="space-y-2 text-sm">
					<li class="flex items-center gap-2">
						<Icon
							name="whatsapp"
							class="w-4 h-4" />
						<a
							href={PUBLIC_WHATSAPP_LINK}
							target="_blank"
							class="hover:text-main-400 transition-colors"
							>WhatsApp</a
						>
					</li>
					<li class="flex items-center gap-2">
						<Icon
							name="instagram"
							class="w-4 h-4" />
						<a
							href="https://www.instagram.com/frequens.neuroclinic/"
							target="_blank"
							class="hover:text-main-400 transition-colors"
							>Instagram</a
						>
					</li>
					<li class="flex items-start gap-2">
						<Icon
							name="map-pin"
							class="w-4 h-4 mt-0.5" />
						<a
							href="https://maps.app.goo.gl/nNEHp8UEDSMV3stL8"
							target="_blank"
							class="hover:text-main-400 transition-colors">
							Calle 50 171, Col. Francisco de Montejo <br >
							Mérida, Yucatán, 97203, México
						</a>
					</li>
				</ul>
			</div>
		</div>

		<!-- Bottom Row -->
		<div class="border-t border-secondary-700 pt-8 flex flex-col md:flex-row justify-between items-center">
			<p class="text-sm text-secondary-400 mb-4 md:mb-0">
				&copy; {new Date().getFullYear()}&nbsp;Frequens Neuro Clinic. Todos los Derechos Reservados
			</p>
			<div class="flex space-x-6">
				<a
					href="#"
					class="text-sm text-secondary-400 hover:text-main-400 transition-colors"
					>Términos de Uso</a
				>
				<a
					href="#"
					class="text-sm text-secondary-400 hover:text-main-400 transition-colors"
					>Política de Privacidad</a
				>
			</div>
		</div>
	</div>
</footer>
