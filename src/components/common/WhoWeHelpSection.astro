---
import { Icon } from 'astro-icon/components';
---

<section class="py-20 bg-gray-50">
	<div class="container mx-auto px-4">
		<div class="max-w-6xl mx-auto">
			<div class="text-center mb-12">
				<h2 class="text-4xl font-bold text-secondary-800 mb-4">¿A quién ayudamos?</h2>
			</div>

			<div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
				<!-- TDAH Card -->
				<a href="/emt-tdah" class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-main-500 hover:shadow-md transition-shadow">
					<div class="flex items-start gap-4">
						<div class="w-12 h-12 bg-main-100 rounded-full flex items-center justify-center shrink-0">
							<Icon name="bolt" class="w-6 h-6 text-main-600" />
						</div>
						<div>
							<p class="text-lg font-semibold text-secondary-800">Niños, adolescentes y adultos con TDAH</p>
						</div>
					</div>
				</a>

				<!-- Autismo Card -->
				<a href="/emt-autismo" class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-main-500 hover:shadow-md transition-shadow">
					<div class="flex items-start gap-4">
						<div class="w-12 h-12 bg-main-100 rounded-full flex items-center justify-center shrink-0">
							<Icon name="users" class="w-6 h-6 text-main-600" />
						</div>
						<div>
							<p class="text-lg font-semibold text-secondary-800">Niños, adolescentes y adultos autistas</p>
						</div>
					</div>
				</a>

				<!-- Depresión Card -->
				<a href="/emt-depresion" class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-main-500 hover:shadow-md transition-shadow">
					<div class="flex items-start gap-4">
						<div class="w-12 h-12 bg-main-100 rounded-full flex items-center justify-center shrink-0">
							<Icon name="heart" class="w-6 h-6 text-main-600" />
						</div>
						<div>
							<p class="text-lg font-semibold text-secondary-800">Adultos con depresión resistente</p>
						</div>
					</div>
				</a>

				<!-- Ansiedad Card -->
				<a href="/emt-ansiedad" class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-main-500 hover:shadow-md transition-shadow">
					<div class="flex items-start gap-4">
						<div class="w-12 h-12 bg-main-100 rounded-full flex items-center justify-center shrink-0">
							<Icon name="shield-check" class="w-6 h-6 text-main-600" />
						</div>
						<div>
							<p class="text-lg font-semibold text-secondary-800">Personas con ansiedad crónica</p>
						</div>
					</div>
				</a>

				<!-- Dolor crónico Card -->
				<a href="/emt-dolor" class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-main-500 hover:shadow-md transition-shadow">
					<div class="flex items-start gap-4">
						<div class="w-12 h-12 bg-main-100 rounded-full flex items-center justify-center shrink-0">
							<Icon name="lightning-bolt" class="w-6 h-6 text-main-600" />
						</div>
						<div>
							<p class="text-lg font-semibold text-secondary-800">Casos de dolor crónico o fibromialgia</p>
						</div>
					</div>
				</a>

				<!-- Alternativas Card -->
				<a href="/emt-adicciones" class="bg-white p-6 rounded-xl shadow-sm border-l-4 border-main-500 hover:shadow-md transition-shadow">
					<div class="flex items-start gap-4">
						<div class="w-12 h-12 bg-main-100 rounded-full flex items-center justify-center shrink-0">
							<Icon name="sparkles" class="w-6 h-6 text-main-600" />
						</div>
						<div>
							<p class="text-lg font-semibold text-secondary-800">Pacientes buscando alternativas sin medicamentos</p>
						</div>
					</div>
				</a>
			</div>
		</div>
	</div>
</section>
