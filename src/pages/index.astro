					<button class="bg-white text-main-600 hover:bg-main-50 border-2 border-main-500 px-8 py-3 rounded-lg font-semibold transition-colors duration-300">
						Consultar Ahora
					</button>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="bg-secondary-900 text-white py-12">
			<div class="container mx-auto px-4">
				<!-- Top Row -->
				<div class="grid md:grid-cols-5 gap-8 mb-8">
					<!-- Logo -->
					<div class="md:col-span-1">
						<div class="flex items-center space-x-2 mb-4">
							<div class="w-8 h-8 bg-main-500 rounded-full flex items-center justify-center">
								<div class="w-4 h-4 bg-white rounded-full"></div>
							</div>
							<span class="text-xl font-bold">Frequens</span>
						</div>
					</div>
					
					<!-- Company Links -->
					<div>
						<h4 class="font-semibold mb-4">Empresa</h4>
						<ul class="space-y-2 text-sm">
							<li><a href="#" class="hover:text-main-400 transition-colors">Inicio</a></li>
							<li><a href="#" class="hover:text-main-400 transition-colors">Acerca de Nosotros</a></li>
							<li><a href="#" class="hover:text-main-400 transition-colors">Carreras</a></li>
							<li><a href="#" class="hover:text-main-400 transition-colors">Testimonios</a></li>
						</ul>
					</div>
					
					<!-- Professionals Links -->
					<div>
						<h4 class="font-semibold mb-4">Profesionales</h4>
