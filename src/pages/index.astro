---
import Layout from '../layouts/Layout.astro';
import AboutSection from '../components/common/AboutSection.astro';
import Footer from '../components/common/Footer.astro';
import Header from '../components/common/Header.astro';
import HeroSection from '../components/home/HeroSection.astro';
import BenefitsSection from '../components/common/BenefitsSection.astro';
import TreatmentProcessSection from '../components/home/TreatmentProcessSection.astro';
import WhyChooseUsSection from '../components/home/WhyChooseUsSection.astro';
import MapSection from '../components/common/MapSection.astro';
import WhatIsEMTSection from '../components/common/WhatIsEMTSection.astro';
import WhoWeHelpSection from '../components/common/WhoWeHelpSection.astro';
import WhyChooseFrequensSection from '../components/common/WhyChooseFrequensSection.astro';
import ScheduleCTASection from '../components/common/ScheduleCTASection.astro';
---

<Layout title="Frequens Neuro Clinic - Estimulación Magnética Transcraneal">
	<main class="min-h-screen bg-white">
		<Header />
		<HeroSection sectionId="inicio" />
		<WhatIsEMTSection />
		<WhoWeHelpSection />
		<AboutSection sectionId="sobre-nosotros" />
		<WhyChooseUsSection />
		<TreatmentProcessSection sectionId="tratamiento" />
		<BenefitsSection sectionId="resultados" />
		<ScheduleCTASection sectionClass="my-20 max-w-6xl mx-auto" />
		<MapSection sectionId="ubicacion" />
		<Footer />
	</main>
</Layout>
