---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Frequens - Welcome">
	<main class="min-h-screen bg-background-50">
		<!-- Hero Section -->
		<section class="relative overflow-hidden bg-gradient-to-br from-main-50 to-secondary-50">
			<div class="container mx-auto px-4 py-20 lg:py-32">
				<div class="max-w-4xl mx-auto text-center">
					<h1 class="text-5xl lg:text-7xl font-serif font-bold text-main-800 mb-6">
						Welcome to 
						<span class="text-accent-600">Frequens</span>
					</h1>
					<p class="text-xl lg:text-2xl text-secondary-700 mb-8 font-sans leading-relaxed">
						Discover the perfect harmony of design and functionality
					</p>
					<div class="flex flex-col sm:flex-row gap-4 justify-center">
						<button class="bg-main-500 hover:bg-main-600 text-white px-8 py-4 rounded-2xl font-sans font-semibold transition-all duration-300 shadow-warm hover:shadow-warm-lg">
							Get Started
						</button>
						<button class="border-2 border-main-500 text-main-600 hover:bg-main-500 hover:text-white px-8 py-4 rounded-2xl font-sans font-semibold transition-all duration-300">
							Learn More
						</button>
					</div>
				</div>
			</div>
		</section>

		<!-- Features Section -->
		<section class="py-20 bg-white">
			<div class="container mx-auto px-4">
				<div class="text-center mb-16">
					<h2 class="text-4xl font-serif font-bold text-main-800 mb-4">
						Why Choose Frequens?
					</h2>
					<p class="text-lg text-secondary-600 max-w-2xl mx-auto">
						Experience the perfect blend of modern design and intuitive functionality
					</p>
				</div>
				
				<div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
					<div class="bg-background-50 p-8 rounded-3xl shadow-warm hover:shadow-warm-lg transition-all duration-300">
						<div class="w-16 h-16 bg-main-100 rounded-2xl flex items-center justify-center mb-6">
							<svg class="w-8 h-8 text-main-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-serif font-semibold text-main-800 mb-4">Lightning Fast</h3>
						<p class="text-secondary-600 font-sans">Optimized for speed and performance with modern web technologies</p>
					</div>
					
					<div class="bg-background-50 p-8 rounded-3xl shadow-warm hover:shadow-warm-lg transition-all duration-300">
						<div class="w-16 h-16 bg-secondary-100 rounded-2xl flex items-center justify-center mb-6">
							<svg class="w-8 h-8 text-secondary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-serif font-semibold text-main-800 mb-4">Beautiful Design</h3>
						<p class="text-secondary-600 font-sans">Carefully crafted with attention to detail and user experience</p>
					</div>
					
					<div class="bg-background-50 p-8 rounded-3xl shadow-warm hover:shadow-warm-lg transition-all duration-300">
						<div class="w-16 h-16 bg-accent-100 rounded-2xl flex items-center justify-center mb-6">
							<svg class="w-8 h-8 text-accent-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
							</svg>
						</div>
						<h3 class="text-xl font-serif font-semibold text-main-800 mb-4">Reliable</h3>
						<p class="text-secondary-600 font-sans">Built with stability and reliability as core principles</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Color Palette Showcase -->
		<section class="py-20 bg-gradient-to-r from-main-50 to-secondary-50">
			<div class="container mx-auto px-4">
				<div class="text-center mb-16">
					<h2 class="text-4xl font-serif font-bold text-main-800 mb-4">
						Our Color Palette
					</h2>
					<p class="text-lg text-secondary-600 max-w-2xl mx-auto">
						Carefully selected colors that create harmony and visual appeal
					</p>
				</div>
				
				<div class="grid grid-cols-2 md:grid-cols-4 gap-6 max-w-4xl mx-auto">
					<div class="text-center">
						<div class="w-full h-24 bg-main-500 rounded-2xl mb-4 shadow-warm"></div>
						<h4 class="font-sans font-semibold text-main-800">Main</h4>
						<p class="text-sm text-secondary-600">#B98739</p>
					</div>
					<div class="text-center">
						<div class="w-full h-24 bg-secondary-500 rounded-2xl mb-4 shadow-warm"></div>
						<h4 class="font-sans font-semibold text-main-800">Secondary</h4>
						<p class="text-sm text-secondary-600">#6F8F80</p>
					</div>
					<div class="text-center">
						<div class="w-full h-24 bg-accent-500 rounded-2xl mb-4 shadow-warm"></div>
						<h4 class="font-sans font-semibold text-main-800">Accent</h4>
						<p class="text-sm text-secondary-600">#713A16</p>
					</div>
					<div class="text-center">
						<div class="w-full h-24 bg-background-50 border-2 border-main-200 rounded-2xl mb-4 shadow-warm"></div>
						<h4 class="font-sans font-semibold text-main-800">Background</h4>
						<p class="text-sm text-secondary-600">#F6F4EC</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Footer -->
		<footer class="bg-main-800 text-white py-12">
			<div class="container mx-auto px-4 text-center">
				<h3 class="text-2xl font-serif font-bold mb-4">Frequens</h3>
				<p class="text-main-200 mb-6 font-sans">
					Built with Astro and Tailwind CSS
				</p>
				<div class="flex justify-center space-x-6">
					<a href="#" class="text-main-200 hover:text-white transition-colors duration-300 font-sans">About</a>
					<a href="#" class="text-main-200 hover:text-white transition-colors duration-300 font-sans">Contact</a>
					<a href="#" class="text-main-200 hover:text-white transition-colors duration-300 font-sans">Privacy</a>
				</div>
			</div>
		</footer>
	</main>
</Layout>
